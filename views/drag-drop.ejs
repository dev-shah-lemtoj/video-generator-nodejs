function extractPlaylistId(url) {
  try {
    const urlObj = new URL(url);
    return urlObj.searchParams.get('list') || null;
  } catch {
    return null;
  }
}

async function generateGridByCategory(cols, rows, query, videoCount) {
  currentVideoQuery = query;
  currentCols = cols;
  currentVideoCount = cols * rows;
  currentVideoSourceType = 'category';

  const { videos, nextPageToken: token } = await fetchVideosByCategory(query, currentVideoCount);
  nextPageToken = token;

  let html = renderVideosGrid(videos, cols, rows, currentVideoCount);
  if (token) {
    html += `<div class="text-center mt-3"><button id="loadMoreBtn" class="btn btn-primary">Load More</button></div>`;
  }

  setTimeout(() => {
    const loadMoreBtn = document.getElementById('loadMoreBtn');
    if (loadMoreBtn) {
      loadMoreBtn.addEventListener('click', loadMoreVideos);
    }
  }, 100);

  return html;
}

async function fetchVideosByCategory(query, maxResults=12, pageToken = '') {
  const url = `https://www.googleapis.com/youtube/v3/search?part=snippet&maxResults=${maxResults}&q=${encodeURIComponent(query)}&type=video&order=date&pageToken=${pageToken}&key=${YT_API_KEY}`;
  const res = await fetch(url);
  const data = await res.json();

  if (!data.items) return { videos: [], nextPageToken: null };

  const videos = data.items.map(item => ({
    snippet: {
      resourceId: { videoId: item.id.videoId },
      ...item.snippet
    }
  }));

  return { videos, nextPageToken: data.nextPageToken || null };
}


function renderVideosGrid(videos, cols, rows, videoCount, wrap = true) {
  let html = wrap ? `<div class="video-grid-container">` : '';
  let index = 0;

  for (let r = 0; r < rows; r++) {
    html += `<div class="row mb-3">`;
    for (let c = 0; c < cols && index < videos.length; c++, index++) {
      const video = videos[index];
      const { title, thumbnails } = video.snippet;
      const videoId = video.snippet.resourceId?.videoId || video.id?.videoId || '';
      html += `
        <div class="col">
          <div class="card h-100">
            <img src="${thumbnails.medium.url}" class="card-img-top" alt="${title}">
            <div class="card-body p-2">

              <a href="https://www.youtube.com/watch?v=${videoId}" target="_blank" class="btn btn-sm btn-outline-primary w-100">Watch</a>
            </div>
          </div>
        </div>`;
    }
    html += `</div>`;
  }

  if (wrap) html += `</div>`;
  return html;
}


async function loadMoreVideos() {
  if (!nextPageToken || currentVideoSourceType !== 'category') return;

  const container = currentEditTarget.querySelector('.video-grid-container');
  const { videos, nextPageToken: newToken } = await fetchVideosByCategory(currentVideoQuery, currentCols * 2, nextPageToken);
  nextPageToken = newToken;

  const html = renderVideosGrid(videos, currentCols, Math.ceil(videos.length / currentCols), videos.length, false);
  container.insertAdjacentHTML('beforeend', html);

  if (!newToken) {
    document.getElementById('loadMoreBtn').remove();
  }

}

